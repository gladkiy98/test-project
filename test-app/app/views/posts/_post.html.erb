<table class="table table-borderless">
  <thead>
    <tr>
      <th scope="col">User id <%= post.user_id %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= post.content %>
      </td>
    </tr>
    <tr>
      <td>
        <% if current_user.id == post.user_id %>
          <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to like_post_path(post), class: "like", method: :put, remote: true do %>
        <button type="button" class="btn btn-info">
          <span class="badge"><%= post.get_upvotes.size %></span>
        </button>
        <% end %>

        <%= link_to unlike_post_path(post), class: "like", method: :put, remote: true do %>
        <button type="button" class="btn btn-info">
          <span class="badge"><%= post.get_downvotes.size %></span>
        </button>
        <% end %>
      </td>
    </tr>
    <hr>
  </tbody>
</table>